#!/bin/sh

set -e

case "$1" in
    upgrade)
        rm -rf \
            /usr/share/elementalclinic/database \
            /usr/share/elementalclinic/themes
        ;;
    install)
        if [ "x$2" != "x" ]; then
            rm -rf \
                /usr/share/elementalclinic/database \
                /usr/share/elementalclinic/themes
        fi
        ;;
    *) ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
